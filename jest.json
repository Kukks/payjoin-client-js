{
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testRegex": "/ts_src/.*\\.spec\\.ts$",
  "testURL": "http://localhost/",
  "testEnvironment" : "node",
  "coverageThreshold": {
    "global": {
      "statements": 60,
      "branches": 50,
      "functions": 80,
      "lines": 60
    }
  },
  "collectCoverageFrom": [
    "ts_src/**/*.ts",
    "!**/node_modules/**"
  ],
  "coverageReporters": [
    "lcov",
    "text"
  ],
  "verbose": true
}
